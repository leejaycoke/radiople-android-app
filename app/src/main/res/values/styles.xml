<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_dark</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.Search" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/grey_light</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/grey_dark</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="Button.Red" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="Button.Purple" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/purple</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="Button.White" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="Button.Blue" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="Button.Grey.Light" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/grey_light</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="Button.Grey.Bright" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/grey_bright</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="EditText.White" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/edittext_white_normal</item>
        <item name="colorControlActivated">@color/edittext_white_normal</item>
        <item name="colorControlHighlight">@color/grey</item>
    </style>

    <style name="EditText.Grey" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/edittext_white_normal</item>
        <item name="colorControlHighlight">@color/grey</item>
    </style>

</resources>
